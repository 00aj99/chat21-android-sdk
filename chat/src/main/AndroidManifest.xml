<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="chat21.android">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!--display the contact list-->
        <activity
            android:name="chat21.android.contacts.activites.ContactListActivity"
            android:label="@string/string_contact_list_activity_title" />

        <!--display the list of all active conversation-->
        <activity
            android:name="chat21.android.conversations.activities.ConversationListActivity"
            android:label="@string/string_conversation_list_activity_title" />

        <!--display the list of all messages into a specific conversation-->
        <activity
            android:name="chat21.android.messages.activites.MessageListActivity"
            android:parentActivityName=".conversations.activities.ConversationListActivity"
            android:windowSoftInputMode="adjustPan">

            <!--http://stackoverflow.com/questions/39663601/open-a-specific-activity-from-firebase-notification-->
            <!--from notification-->
            <!--bugfix Issue #39-->
            <intent-filter>
                <action android:name="OPEN_MESSAGE_LIST_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="chat21.android.conversations.activities.ConversationListActivity" />
        </activity>

        <activity android:name="chat21.android.messages.activites.ImageDetailsActivity" />

        <activity
            android:name="chat21.android.groups.activities.CreateGroupActivity"
            android:label="@string/string_create_group_activity_title"></activity>

        <activity
            android:name="chat21.android.groups.activities.AddMembersActivity"
            android:label="@string/string_add_members_activity_title"></activity>

        <activity android:name=".groups.activities.GroupAdminPanelActivity"></activity>

        <activity
            android:name="chat21.android.groups.activities.MyGroupsListActivity"
            android:label="@string/activity_group_list_activity_title"></activity>

        <activity
            android:name="chat21.android.groups.activities.ChooseGroupActivity"
            android:label="@string/activity_group_list_activity_title"></activity>

        <!--display the user profile-->
        <activity android:name="chat21.android.user.activities.PublicProfileActivity" />

        <!--https://firebase.google.com/docs/notifications/android/console-audience-->
        <service android:name="chat21.android.notifications.ChatFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
        See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification_small" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
        notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <!--A service that extends FirebaseInstanceIdService to handle the creation, rotation, and updating of registration tokens. This is required for sending to specific devices or for creating device groups.-->
        <service
            android:name="chat21.android.user.service.SaveFirebaseInstanceIdService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name="chat21.android.connectivity.NetworkReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
