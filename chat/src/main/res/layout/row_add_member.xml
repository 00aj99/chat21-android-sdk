<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/chat_row_add_member_box_size"
            android:layout_height="@dimen/chat_row_add_member_box_size"
            android:padding="@dimen/chat_padding_small">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="@dimen/chat_profile_picture_size"
                android:layout_height="@dimen/chat_profile_picture_size"
                android:layout_centerInParent="true" />

            <!--already added icon-->
            <LinearLayout
                android:id="@+id/already_added_icon"
                android:layout_width="@dimen/chat_row_add_member_remove_size"
                android:layout_height="@dimen/chat_row_add_member_remove_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_shape_green"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/chat_row_add_member_remove_size"
                    android:layout_height="@dimen/chat_row_add_member_remove_size"
                    android:padding="@dimen/chat_padding_xx_small"
                    app:srcCompat="@drawable/ic_contact_already_added_24dp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/chat_margin_small"
            android:layout_marginRight="@dimen/chat_margin_small"
            android:layout_marginTop="@dimen/chat_margin_small"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/already_added_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_members_activity_contact_already_added_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>