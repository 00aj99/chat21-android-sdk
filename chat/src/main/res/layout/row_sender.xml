<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_sender_no_profile_picture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/chat_margin_small"
        android:background="@drawable/shape_row_chat_timestamp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/chat_padding_small"
        android:paddingRight="@dimen/chat_padding_small">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/blue_grey_900" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/chat_margin_x_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chat_margin_xx_big">

        <TextView
            android:id="@+id/timestamp"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/chat_margin_xx_small"
            android:layout_toStartOf="@+id/row_message"
            android:textColor="@color/background_bubble_timestamp_sender" />

        <RelativeLayout
            android:id="@+id/row_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/message_metadata">

            <RelativeLayout
                android:id="@+id/message_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/message_group_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--bugfix Issue #52 -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/chat_margin_x_small">

                        <!--bugfix Issue #42-->
                        <ImageView
                            android:id="@+id/preview"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content" />

                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="@dimen/chat_progress_bar_size"
                            android:layout_height="@dimen/chat_progress_bar_size"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/box_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.vanniktech.emoji.EmojiTextView
                            android:id="@+id/message"
                            style="@style/Base.TextAppearance.AppCompat.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoLink="web|email"
                            android:gravity="right"
                            android:padding="@dimen/chat_padding_small"
                            android:linksClickable="true"
                            android:textColor="@color/background_bubble_text_sender"
                            android:textColorLink="@color/color_clickable_link_sender"
                            app:emojiSize="23dip" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/message_metadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/chat_margin_small"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/status_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/status_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/status_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


