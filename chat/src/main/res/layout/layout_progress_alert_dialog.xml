<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/chat_padding_normal">

        <!--<TextView-->
        <!--android:id="@+id/progress_bar_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Upload"-->
        <!--android:textAppearance="@style/TextAppearance.AppCompat.Title" />-->

        <TextView
            android:id="@+id/progress_bar_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Loading your new conversation"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/chat_progress_bar_size"
            android:layout_height="@dimen/chat_progress_bar_size"
            android:layout_below="@id/progress_bar_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/chat_margin_normal" />
    </RelativeLayout>

</android.support.v7.widget.CardView>