<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/chat_margin_small"
    android:orientation="horizontal">

    <!-- profile picture -->
    <ImageView
        android:id="@+id/contact_profile_picture"
        android:layout_width="@dimen/chat_profile_picture_size"
        android:layout_height="@dimen/chat_profile_picture_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/chat_margin_small"
        android:layout_toEndOf="@+id/contact_profile_picture"
        android:layout_toRightOf="@+id/contact_profile_picture"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp" />

        <TextView
            android:id="@+id/label_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_group_admin"
            android:padding="2dp"
            android:visibility="gone"
            android:text="@string/activity_group_admin_panel_group_admin_label"
            android:textColor="@color/green_500" />
    </LinearLayout>
</RelativeLayout>